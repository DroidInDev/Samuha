<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="2dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="2dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="@color/bright_foreground_light_disabled">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <com.stgobain.samuha.CustomUserInterface.CustomFontTextView
            android:id="@+id/txtHubDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgMemory"
            android:layout_marginStart="10dp"
            android:layout_marginTop="2dp"
            android:text="july2017"
            android:textColor="@color/event_date"
            android:textSize="14sp"
            android:textStyle="normal"
            app:font="@string/font_name_square" />

        <ImageView
            android:id="@+id/imgVerDiv"
            android:layout_width="1dp"
            android:layout_height="40dp"
            android:layout_toEndOf="@id/txtHubDate"
            android:background="@color/fb_bg"
            android:layout_marginStart="5dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:layout_marginEnd="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/vertical_divider_line" />

        <com.stgobain.samuha.CustomUserInterface.CustomFontTextView
            android:id="@+id/txtEventHubName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="2dp"
            android:layout_toEndOf="@id/imgVerDiv"
            android:text="Kids Party"
            android:textColor="@color/selectedTabColor"
            android:textSize="12sp"
            android:textStyle="normal"
            app:font="@string/font_name_square" />

        <ImageView
            android:id="@+id/imgHubLocationIcon"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_below="@id/txtEventHubName"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/imgVerDiv"
            android:adjustViewBounds="true"
            android:layout_marginStart="10dp"
            android:src="@drawable/location_black" />

        <com.stgobain.samuha.CustomUserInterface.CustomFontTextView
            android:id="@+id/txtHubLoc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imgHubLocationIcon"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/imgHubLocationIcon"
            android:layout_marginTop="5dp"
            android:layout_below="@id/txtEventHubName"
            android:text="Chennai egmore"
            android:maxLines="5"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="normal"
            app:font="@string/font_name_square" />


    </RelativeLayout>

</android.support.v7.widget.CardView>