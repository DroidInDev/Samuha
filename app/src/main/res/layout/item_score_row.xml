<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"

    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/layoutScore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"

        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgScoreAttr"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginStart="10dp"
            android:layout_weight="0.1"
            android:layout_gravity="center_vertical"
            android:src="@drawable/user_icon" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.6">
        <com.stgobain.samuha.CustomUserInterface.CustomFontTextView
            android:id="@+id/txtScoreName"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:gravity="center_vertical"
            android:text="@string/score"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            android:textStyle="bold"
            app:font="@string/font_name_square" />
            <com.stgobain.samuha.CustomUserInterface.CustomFontTextView
                android:id="@+id/txtScorelocation"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:gravity="center_vertical"
                android:text="@string/score"
                android:textColor="@color/colorPrimary"
                android:textSize="12sp"
                android:textStyle="normal"
                app:font="@string/font_name_square" />
        </LinearLayout>
        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="8dp"
            android:layout_weight="0.3">
        <ImageView
            android:id="@+id/imgRightArrowScore"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@color/colorPrimary" />
            <com.stgobain.samuha.CustomUserInterface.CustomFontTextView
                android:id="@+id/txtScore"
                android:layout_margin="0.5dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/score"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:gravity="center"
                android:textStyle="normal"
                app:font="@string/font_name_square" />
        </FrameLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="65dp"
        android:background="@color/bright_foreground_light_disabled" />
</LinearLayout>