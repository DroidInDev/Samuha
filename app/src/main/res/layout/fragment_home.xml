<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/imgLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5"
        android:orientation="vertical"
        android:visibility="visible">

        <ImageView
            android:id="@+id/imgHomeBg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/homepage_wallpaper" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutHomeAttributes"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="15dp"
        android:layout_weight="1.5"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/scoreLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:clickable="true">

            <ImageView
                android:id="@+id/imgScoreAttr"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="10dp"
                android:layout_weight="0.2"
                android:src="@drawable/score_icon" />

            <com.stgobain.samuha.CustomUserInterface.CustomFontTextView
                android:id="@+id/txtScoreHeader"
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:layout_marginStart="30dp"
                android:layout_weight="0.7"
                android:gravity="center_vertical"
                android:text="@string/score"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                android:textStyle="bold"
                app:font="@string/font_name_square" />

            <ImageView
                android:id="@+id/imgRightArrowScore"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_weight="0.1"
                android:gravity="right"
                android:src="@drawable/right_arrow_icon" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/eventLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgEventAttr"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="10dp"
                android:layout_weight="0.2"
                android:src="@drawable/event_icon" />

            <com.stgobain.samuha.CustomUserInterface.CustomFontTextView
                android:id="@+id/txtEventHeader"
                android:layout_width="60dp"
                android:layout_height="25dp"
                android:layout_marginStart="30dp"
                android:layout_weight="0.7"
                android:gravity="center_vertical"
                android:text="@string/today_event"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                android:textStyle="bold"
                app:font="@string/font_name_square" />

            <ImageView
                android:id="@+id/imgRightArrowEvent"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_weight="0.1"
                android:gravity="right"
                android:src="@drawable/right_arrow_icon" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/announceLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgAnnounceAttr"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="10dp"
                android:layout_weight="0.2"
                android:src="@drawable/anounce_icon" />

            <com.stgobain.samuha.CustomUserInterface.CustomFontTextView
                android:id="@+id/txtAnnounce"
                android:layout_width="60dp"
                android:layout_height="25dp"
                android:layout_marginStart="30dp"
                android:layout_weight="0.7"
                android:gravity="center_vertical"
                android:text="@string/announcement"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                android:textStyle="bold"
                app:font="@string/font_name_square" />

            <ImageView
                android:id="@+id/imgRightArrowAnnounce"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_weight="0.1"
                android:gravity="right"
                android:src="@drawable/right_arrow_icon" />
        </LinearLayout>
    </LinearLayout>

