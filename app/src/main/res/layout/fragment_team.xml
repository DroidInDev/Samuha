<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_grey">
    <LinearLayout
        android:id="@+id/layoutTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:background="@color/bg_grey">
        <LinearLayout
            android:layout="@+id/layoutContests"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="5dp"
            android:padding="15dp"
            android:orientation="vertical"
            android:background="@color/white"
            android:id="@+id/linearLayout">
            <ImageView
                android:id="@+id/imgtechNow"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                android:src="@drawable/tech_now_flag" />
            <com.stgobain.samuha.CustomUserInterface.CustomFontTextView
                android:id="@+id/txtTechNow"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:text="@string/empty"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:gravity="center"
                app:font="@string/font_name_square"
                android:textAllCaps="false"
                android:background="@drawable/rounded_corner"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layoutUpdates"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="5dp"
            android:padding="15dp"
            android:background="@color/white"
            android:layout_marginStart="10dp">
            <ImageView
                android:id="@+id/imgDigiNow"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                android:src="@drawable/digi_now_flag" />
            <com.stgobain.samuha.CustomUserInterface.CustomFontTextView
                android:id="@+id/txtDigiNow"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:text="@string/empty"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:gravity="center"
                app:font="@string/font_name_square"
                android:textAllCaps="false"
                android:background="@drawable/rounded_corner"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/layoutBottom"
        android:layout_below="@id/layoutTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:background="@color/bg_grey">
        <LinearLayout
            android:layout="@+id/layoutAuditioins"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="5dp"
            android:padding="15dp"
            android:orientation="vertical"
            android:background="@color/white"
            android:id="@+id/slinearLayout">
            <ImageView
                android:id="@+id/imgCyberNow"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                android:src="@drawable/cyper_now_flag" />
            <com.stgobain.samuha.CustomUserInterface.CustomFontTextView
                android:id="@+id/txtCyberNow"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:text="@string/empty"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:gravity="center"
                app:font="@string/font_name_square"
                android:textAllCaps="false"
                android:background="@drawable/rounded_corner"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/layoutSabGallery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="5dp"
            android:padding="15dp"
            android:background="@color/white"
            android:layout_marginStart="10dp">
            <ImageView
                android:id="@+id/imgBetsNow"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:adjustViewBounds="true"
                android:background="@android:color/transparent"
                android:scaleType="fitXY"
                android:src="@drawable/beta_now_flag" />
            <com.stgobain.samuha.CustomUserInterface.CustomFontTextView
                android:id="@+id/txtBetsNow"
                android:layout_width="100dp"
                android:layout_height="20dp"
                android:text="@string/empty"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:gravity="center"
                app:font="@string/font_name_square"
                android:textAllCaps="false"
                android:background="@drawable/rounded_corner"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>

