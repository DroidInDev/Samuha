<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="2dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="2dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:background="@color/bright_foreground_light_disabled">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/fb_bg">

            <FrameLayout
                android:id="@+id/mediaLayout"
                android:layout_width="wrap_content"
                android:layout_height="140dp"
                android:layout_marginBottom="5dp">

                <ImageView
                    android:id="@+id/imgplay"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"
                    android:layout_margin="10dp"
                    android:clickable="true"
                    android:scaleType="fitCenter"
                    android:src="@drawable/play_icon" />

                <ImageView
                    android:id="@+id/imgMemory"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_gravity="center_vertical"
                    android:layout_margin="10dp"
                    android:background="@color/colorPrimary"
                    android:scaleType="fitCenter"/>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/mediaLayout">

                <com.stgobain.samuha.CustomUserInterface.CustomFontTextView
                    android:id="@+id/txtMemoriesDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="2dp"
                    android:text="july2017"
                    android:textColor="@color/event_date"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    app:font="@string/font_name_square" />

                <com.stgobain.samuha.CustomUserInterface.CustomFontTextView
                    android:id="@+id/txtEventMemoriesName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:text="Kids Party"
                    android:textColor="@color/selectedTabColor"
                    android:textSize="10sp"
                    android:textStyle="normal"
                    app:font="@string/font_name_square" />

                <com.stgobain.samuha.CustomUserInterface.CustomFontTextView
                    android:id="@+id/txtMemoriesEventDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:text="Chennai egmore"
                    android:textColor="@color/black"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    app:font="@string/font_name_square" />

                <ImageView
                    android:id="@+id/imgLocationIcon"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="end"
                    android:layout_marginBottom="5dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="10dp"
                    android:clickable="true"
                    android:src="@drawable/vote_icon" />
            </LinearLayout>

        </RelativeLayout>
    </FrameLayout>
</android.support.v7.widget.CardView>