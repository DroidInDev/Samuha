    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/layoutAnnounce"
        android:layout_marginTop="8dp"
        android:background="@color/bright_foreground_light_disabled" />
</RelativeLayout>