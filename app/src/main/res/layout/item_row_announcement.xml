<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="@color/bright_foreground_light_disabled"
    android:orientation="vertical"
    app:cardElevation="2dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="2dp">

        <LinearLayout
            android:id="@+id/layoutAnnounce"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:layout_weight="0.1">

                <ImageView
                    android:id="@+id/imgAnnounceAttr"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/event_icon" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_weight="0.8"
                    android:orientation="vertical">

                    <com.stgobain.samuha.CustomUserInterface.CustomFontTextView
                        android:id="@+id/txtAnnounceName"
                        android:layout_width="wrap_content"
                        android:layout_height="20dp"
                        android:gravity="center_vertical"
                        android:maxLines="1"
                        android:text="@string/score"
                        android:textColor="@color/colorPrimary"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:font="@string/font_name_square" />


                    <com.stgobain.samuha.CustomUserInterface.CustomFontTextView
                        android:id="@+id/txtAnnounceDescription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center_vertical"
                        android:maxLines="10"
                        android:text="@string/score"
                        android:textColor="@color/colorPrimary"
                        android:textSize="12sp"
                        android:textStyle="normal"
                        app:font="@string/font_name_square" />

                 <!--   <View
                        android:layout_width="match_parent"
                        android:layout_height="0.5dp"
                        android:layout_marginTop="8dp"
                        android:background="@color/bg_grey" />
-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/imgusericon"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_weight="0.2"
                            android:src="@drawable/emp_icon" />

                        <com.stgobain.samuha.CustomUserInterface.CustomFontTextView
                            android:id="@+id/txtwinnerName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="15dp"
                            android:layout_weight="0.4"
                            android:gravity="center_vertical"
                            android:maxLines="1"
                            android:text="@string/score"
                            android:textColor="@color/colorPrimary"
                            android:textSize="12sp"
                            android:textStyle="normal"
                            app:font="@string/font_name_square" />

                        <com.stgobain.samuha.CustomUserInterface.CustomFontTextView
                            android:id="@+id/txtWinTeamName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginStart="15dp"
                            android:layout_weight="0.4"
                            android:gravity="center_vertical"
                            android:maxLines="1"
                            android:text="@string/score"
                            android:textColor="@color/colorPrimary"
                            android:textSize="12sp"
                            android:textStyle="normal"
                            app:font="@string/font_name_square" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
            <!-- <FrameLayout
                 android:layout_width="40dp"
                 android:layout_height="match_parent"
                 android:layout_gravity="center_vertical"
                 android:layout_marginRight="8dp"
                 android:layout_weight="0.2">
                 <ImageView
                     android:id="@+id/imgRightArrowScore"
                     android:layout_gravity="center_vertical"
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:scaleType="fitCenter"
                     android:src="@color/colorPrimary" />
                 <com.stgobain.samuha.CustomUserInterface.CustomFontTextView
                     android:id="@+id/txtScore"
                     android:layout_margin="0.5dp"
                     android:layout_width="match_parent"
                     android:layout_height="match_parent"
                     android:text="@string/score"
                     android:textColor="@color/white"
                     android:textSize="12sp"
                     android:gravity="center"
                     android:textStyle="normal"
                     app:font="@string/font_name_square" />
             </FrameLayout>-->
        </LinearLayout>

    </RelativeLayout>
    <!--  <View
          android:layout_width="match_parent"
          android:layout_height="1dp"
          android:layout_below="@+id/layoutAnnounce"
          android:layout_marginTop="8dp"
          android:background="@color/bright_foreground_light_disabled" />-->
</android.support.v7.widget.CardView>