<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="2dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/screen_background_light_transparent">

    <com.stgobain.samuha.CustomUserInterface.CustomFontTextView
        android:id="@+id/txtDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textColor="@color/event_date"
        android:textSize="14sp"
        android:text="july2017"
        android:textStyle="bold"
        app:font="@string/font_name_square" />

    <com.stgobain.samuha.CustomUserInterface.CustomFontTextView
        android:id="@+id/txtEventName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textColor="@color/selectedTabColor"
        android:textSize="12sp"
        android:text="Kids Party"
        android:textStyle="normal"
        android:layout_below="@id/txtDate"
        app:font="@string/font_name_square" />
    <com.stgobain.samuha.CustomUserInterface.CustomFontTextView
        android:id="@+id/txtEventLocationName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:text="Chennai egmore"
        android:textStyle="normal"
        android:layout_below="@id/txtEventName"
        app:font="@string/font_name_square" />
    <ImageView
        android:id="@+id/imgLocationIcon"
        android:src="@drawable/location_icon"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginEnd="18dp"
        android:layout_below="@+id/txtDate"
        android:layout_alignParentEnd="true" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/txtEventLocationName"
        android:background="@color/bright_foreground_light_disabled" />
</RelativeLayout>