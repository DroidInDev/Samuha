        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="0.3"
            android:layout_marginTop="8dp">

            <com.stgobain.samuha.CustomUserInterface.CustomFontTextView
                android:id="@+id/txtInternalEvnt2"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="@string/grand_events"

                android:textColor="@color/colorPrimary"
                android:textSize="16sp"
                android:textStyle="normal"
                app:font="@string/font_name_square" />

            <ImageView
                android:id="@+id/imgGrandArrow2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/txtInternalEvnt2"
                android:layout_marginEnd="15dp"
                android:src="@drawable/right_arrow_icon" />

